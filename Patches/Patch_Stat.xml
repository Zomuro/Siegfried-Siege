				<parts>
					<li Class="Zomuro.SiegfriedSiege.StatPart_MentalThresholdSetting"/>
				</parts>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>Defs/StatDef[defName="MentalBreakThreshold"]/parts</xpath>
